<header class="bg-light">
    <div class="container ">
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="/">MapMerge</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav  ml-auto">
                        <%if not user_signed_in?%>
                        <li class="nav-item active">
                            <%= link_to "Login" , new_user_session_path, class: 'nav-link' %>
                        </li>
                        <% else %>
                        <li class="nav-item">
                            <%= link_to "Logout" , destroy_user_session_path , method: :delete , class: 'nav-link'%>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Edit User" , edit_user_registration_path, class: 'nav-link' %>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <%= t'.menu' %>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <%= link_to "Locations" , locations_path, class: 'dropdown-item' %>
                                <%= link_to "Create" , new_location_path, class: 'dropdown-item'  %>
                            </div>
                        </li>
                        <%end%>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>
</header>
