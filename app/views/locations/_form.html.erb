      </div>
      <div class="field form-group">
        <%#= f.label :longitude %><br>
        <%#= f.text_field :longitude, :class=>"form-control" %>
      </div-->

      <div class="actions row">
        <div class="col-xs-6">
          <%= link_to 'Back', locations_path, :class=> "btn btn-warning"  %>
          <%= link_to(@location, :class => "btn btn-primary")  do  %>
            <span class="glyphicon glyphicon-map"></span> Show
          <% end %>
        </div>
        <div class="col-xs-6">
          <%= f.submit  :class=> "btn btn-success btn-lg pull-right" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
