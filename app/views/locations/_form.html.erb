  <div class="row">
    <div class="col-xs-12">
      <div class="field  form-group">
        <div class="row">
          <div class="col-xs-2">
            <%= f.label :address %><br>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :address, :class=>"form-control" %>
          </div>
        </div>
      </div>
      <div class="field form-group">
        <div class="row">
          <div class="col-xs-2">
            <%= f.label :zoom %><br>
          </div>
          <div class="col-xs-10">
            <%= f.select :zoom, (12..20) , :class=>"form-control" %>
          </div>
        </div>
      </div>
      <div class="field form-group">
        <div class="row">
          <div class="col-xs-2">
            <%= f.label :tile_size %>
          </div>
          <div class="col-xs-10">
            <%= f.select :tile_size, (3..15).select(&:odd?), :class=>"form-control"%>
          </div>
        </div>

      </div>
      <!--div class="field form-group">
        <%#= f.label :latitude %><br>
