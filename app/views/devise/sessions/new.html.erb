<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <p>
      Simply create a account to access the awesome MapMerge Toolkit.
    </p>
  </div>
</div>
<div class="row">

  <div class="col-xs-6 col-xs-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">Log in</div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-horizontal", :role=>"form"  ) do |f| %>
          <div class="form-group">
            <%= f.label :email ,:class=>"control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true , :class => "form-control" %>
            </div>
          </div>
          <br /><br /><br />
          <div class="form-group">
            <%= f.label :password,:class=>"control-label col-sm-2"  %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off" , :class=> "form-control" %>

            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form group">

              <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                  <%= f.label :remember_me do %>
                    <%= f.check_box :remember_me  %> Remember Me
                  <% end %>

                </div>
              </div>
            </div>

          <% end -%>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

              <%= f.submit "Log in", :class=> "btn btn-primary btn-block" %>
            </div>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
